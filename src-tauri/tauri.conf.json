{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Allay",
  "version": "0.1.0",
  "identifier": "com.daffidev.allay-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Allay",
        "width": 800,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/profile.png",
      "icons/profile.ico"
    ]
  }
}
